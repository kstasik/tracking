{% extends "SystemTrackingBundle::Default/base.html.twig" %}

{% block body %}

<h2>{{ 'devices.title'|trans({}, 'tracking') }}</h2>

{% if devices|length > 0 %}
<table class="table table-striped">
	<thead>
		<th>ID</th>
		<th>{{ 'devices.table.name'|trans({}, 'tracking') }}</th>
		<th>{{ 'devices.table.system'|trans({}, 'tracking') }}</th>
		<th>{{ 'devices.table.action'|trans({}, 'tracking') }}</th>
	</thead>
	<tbody>
		{% for device in devices %}
		<tr>
			<td>{{ device.id }}</td>
			<td>{{ device.name }}</td>
			<td>{{ device.system }}</td>
			<td>
				<a href="{{ path('system_tracking_device_edit', {id: device.id}) }}" class="btn btn-info btn-xs">{{ 'devices.table.edit'|trans({}, 'tracking') }}</a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
<div class="alert alert-warning" role="alert">{{ 'devices.nothing'|trans({}, 'tracking') }}</div>
{% endif %}

{% endblock body %}