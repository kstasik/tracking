{% extends "SystemTrackingBundle::Default/base.html.twig" %}

{% block body %}

<h2>Devices</h2>

{% if devices|length > 0 %}
<table class="table table-striped">
	<thead>
		<th>ID</th>
		<th>Name</th>
		<th>Api Key</th>
	</thead>
	<tbody>
		{% for device in devices %}
		<tr>
			<td>{{ device.id }}</td>
			<td>{{ device.system }}</td>
			<td>{{ device.apiKey }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
<div class="alert alert-warning" role="alert">Nothing found</div>
{% endif %}

{% endblock body %}