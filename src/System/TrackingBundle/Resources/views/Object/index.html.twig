{% extends "SystemTrackingBundle::Default/base.html.twig" %}

{% block body %}

<h2>Objects <a href="{{ path('system_tracking_object_new') }}" class="btn btn-success">Add new</a></h2>

{% if objects|length > 0 %}
<table class="table table-striped">
	<thead>
		<th>ID</th>
		<th>Name</th>
		<th>Actions</th>
	</thead>
	<tbody>
		{% for object in objects %}
		<tr>
			<td>{{ object.id }}</td>
			<td>{{ object.name }}</td>
			<td>
				<a href="{{ path('system_tracking_object_edit', {id: object.id}) }}" class="btn btn-info btn-xs">Edit</a>
				<a href="{{ path('system_tracking_trip', {id: object.id}) }}" class="btn btn-primary btn-xs">Trips</a>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
<div class="alert alert-warning" role="alert">Nothing found</div>
{% endif %}

{% endblock body %}