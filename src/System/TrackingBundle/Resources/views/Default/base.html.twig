<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
		  {% stylesheets '@bootstrap_less' combine=true %}
		    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
		  {% endstylesheets %}
		  <link href="{{ asset('/bundles/systemtracking/css/flags.css') }}" rel="stylesheet" />
		{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    </head>
    <body>
    
	    <div class="container">
		<div class="navbar navbar-default" role="navigation">
	        <div class="navbar-header">
	          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	            <span class="sr-only">Toggle navigation</span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          
	          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	            {% if tracking_state.getStatus() == constant('System\\TrackingBundle\\DependencyInjection\\TrackingState::STATUS_INACTIVE') %}
            	<p class="navbar-text text-error"><span class="glyphicon glyphicon-ban-circle"></span> Nothing received in 15m</p>
            	{% elseif tracking_state.getStatus() == constant('System\\TrackingBundle\\DependencyInjection\\TrackingState::STATUS_ACTIVE') %}
            	<p class="navbar-text text-success"><span class="glyphicon glyphicon-ok-circle"></span> Tracking</p>
            	{% elseif tracking_state.getStatus() == constant('System\\TrackingBundle\\DependencyInjection\\TrackingState::STATUS_DELAYED') %}
            	<p class="navbar-text text-warning"><span class="glyphicon glyphicon-exclamation-sign"></span> Nothing received in 5m</p>
            	{% else %}
            	<p class="navbar-text"><span class="glyphicon glyphicon-time"></span> Not installed</p>
            	{% endif %}
              {% else %}
	            <a class="navbar-brand" href="#">Tracking</a>
	          {% endif %}
	        </div>
	        
	        <div class="collapse navbar-collapse">
	          <ul class="nav navbar-nav">
	            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	            <li>
	                <a href="{{ path('system_tracking_object') }}">
	                	Objects
	                </a>
	            </li>
	            <li>
	                <a href="{{ path('system_tracking_device') }}">
	                	Devices
	                </a>
	            </li>
	            {% else %}
	            <li{% if app.request.attributes.get('_route') == 'fos_user_security_login' %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}">Login</a></li>
	            <li{% if app.request.attributes.get('_route') == 'fos_user_registration_register' %} class="active"{% endif %}><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
	            {% endif %}
	          </ul>
	          
	          <ul class="nav navbar-nav navbar-right">
	            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	            <li class="user-status">
	                <p class="navbar-text">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</p>
	            </li>
	            <li class="user-logout">
	                <a href="{{ path('fos_user_security_logout') }}">
	                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
	                </a>
	            </li>
	          
	            {% endif %}
	          
	            <li{% if app.request.get('_locale') == 'en' %} class="active"{% endif %}><a href="{{ localize_route('en') }}"><img src="blank.gif" class="flag flag-gb" alt="Czech Republic" /></a></li>
	            <li{% if app.request.get('_locale') == 'pl' %} class="active"{% endif %}><a href="{{ localize_route('pl') }}"><img src="blank.gif" class="flag flag-pl" alt="Czech Republic" /></a></li>
	          </ul>
	        </div><!--/.nav-collapse -->
	      </div>
	    </div>
	    
        {% for type, messages in app.session.flashbag.all() %}
            {% for key, message in messages %}
                <div class="flash-{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
	    
	    <div class="container">
	        {% block body %}{% endblock %}
	    </div>
        
        {% block javascripts %}
		  {% javascripts '@jquery_js' '@bootstrap_js' filter='?yui_js' combine=true %}
		     <script src="{{ asset_url }}"></script>
		  {% endjavascripts %}
		{% endblock %}
    </body>
</html>