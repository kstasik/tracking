{% extends "SystemTrackingBundle::Default/base.html.twig" %}

{% block body %}

<h2>Trips: {{ object.name }}</h2>

{% if trips|length > 0 %}
<table class="table table-striped">
	<thead>
		<th>ID</th>
		<th>Date Fixed</th>
		<th>Actions</th>
	</thead>
	<tbody>
		{% for trip in trips %}
		<tr>
			<td>{{ trip.id }}</td>
			<td>{{ trip.date_fixed|date('Y-m-d H:i:s') }}</td>
			<td><a href="{{ path('system_tracking_trip_view', {id: trip.id}) }}" class="btn btn-primary btn-xs">View</a></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
<div class="alert alert-warning" role="alert">Nothing found</div>
{% endif %}

{% endblock body %}